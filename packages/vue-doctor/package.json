{
  "name": "@remylagerweij/vue-doctor",
  "version": "1.1.0",
  "description": "Diagnose and fix performance issues in your Vue.js app",
  "keywords": [
    "diagnostics",
    "linter",
    "nuxt",
    "performance",
    "vue"
  ],
  "homepage": "https://github.com/remylagerweij/vue-doctor#readme",
  "bugs": {
    "url": "https://github.com/remylagerweij/vue-doctor/issues"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/remylagerweij/vue-doctor.git",
    "directory": "packages/vue-doctor"
  },
  "bin": {
    "vue-doctor": "./dist/cli.js"
  },
  "files": [
    "dist"
  ],
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/cli.d.ts",
      "default": "./dist/cli.js"
    },
    "./api": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./eslint-plugin": {
      "types": "./dist/vue-doctor-plugin.d.ts",
      "default": "./dist/vue-doctor-plugin.js"
    }
  },
  "publishConfig": {
    "access": "public",
    "provenance": true
  },
  "scripts": {
    "dev": "tsdown --watch",
    "build": "rm -rf dist && NODE_ENV=production tsdown",
    "typecheck": "tsc --noEmit",
    "test": "npm run build && vitest run"
  },
  "dependencies": {
    "commander": "^14.0.3",
    "eslint": "^10.0.0",
    "eslint-plugin-vue": "^10.8.0",
    "knip": "^5.83.1",
    "ora": "^9.3.0",
    "oxlint": "^1.47.0",
    "picocolors": "^1.1.1",
    "prompts": "^2.4.2",
    "typescript": ">=5.0.4 <7",
    "vue-eslint-parser": "^10.4.0"
  },
  "devDependencies": {
    "@types/prompts": "^2.4.9",
    "tsdown": "^0.20.3"
  }
}
